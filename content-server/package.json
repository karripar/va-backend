{
  "name": "vaihtoaktivaattori-content-server",
  "version": "1.2.0",
  "description": "RESTful APIs with Node.js, Express, and TypeScript",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "postbuild": "npm run apidoc",
    "lint": "eslint --fix src test",
    "test": "jest",
    "apidoc": "apidoc -i src/api/routes/ -o apidocs/",
    "jsdoc": "jsdoc -c jsdoc.json"
  },
  "apidoc": {
    "name": "Vaihtoaktivaattori Content API",
    "version": "1.0.0",
    "description": "REST API backend for Vaihtoaktivaattori content endpoints",
    "title": "Vaihtoaktivaattori Content API",
    "url": "http://localhost:3002/api/v1",
    "template": {
      "withCompare": true,
      "withGenerator": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^1.2.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "fast-fuzzy": "^1.12.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "randomstring": "^1.3.1"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
