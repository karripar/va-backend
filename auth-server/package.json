{
  "name": "vaihtoaktivaattori-auth-server",
  "version": "1.0.0",
  "description": "REST API backend for Vaihtoaktivaattori users and authorization endpoints",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint --fix src test",
    "test": "jest --detectOpenHandles --forceExit",
    "postbuild": "npm run docs",
    "apidoc": "apidoc -i src/api/routes/ -o apidocs/",
    "typedoc": "typedoc --options typedoc.json",
    "docs": "npm run apidoc && npm run typedoc"
  },
  "apidoc": {
    "name": "Vaihtoaktivaattori Auth/Users API",
    "version": "1.0.0",
    "description": "REST API backend for Vaihtoaktivaattori users and authorization endpoints",
    "title": "Vaihtoaktivaattori /Users API",
    "url": "http://localhost:3001/api/v1",
    "template": {
      "withCompare": true,
      "withGenerator": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^1.2.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "uuid": "^13.0.0",
    "va-hybrid-types": "github:karripar/va-hybrid-types"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jsdoc": "^4.0.5",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "randomstring": "^1.3.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
