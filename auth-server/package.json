        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.1",
        "morgan": "^1.10.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/json-schema": "^7.0.15",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
