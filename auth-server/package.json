        "lint": "eslint --fix src test",
        "test": "jest --detectOpenHandles --forceExit",
        "apidoc": "apidoc -i src/api/routes/ -o apidocs/"
    },
    "apidoc": {
        "name": "Vaihtoaktivaattori Auth/Users API",
        "version": "1.0.0",
