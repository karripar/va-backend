        "jest": "^30.1.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "randomstring": "^1.3.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0"
    }
