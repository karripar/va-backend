{
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "target": "esnext",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "jest" ]
    },
    "include": ["./*.js", "src/**/*.ts"],
    "exclude": ["test"]
  }
